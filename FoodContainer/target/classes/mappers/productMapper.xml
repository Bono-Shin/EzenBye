    <select id="view" resultType="ProductVO">
    	SELECT product_name,
    		   bigsort,
    		   middleSort,
    		   origin_price,
    		   sale_price,
    		   brand,
    		   delivery_free_YN,
    		   thumbnail_image,
    		   detail_image,
    		   delivery_info_image,
    		   cancel_image 
    	FROM product
    	WHERE del_YN != 'y' and product_index = #{index}
    </select>

    
</mapper>