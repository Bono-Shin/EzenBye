<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="team.project.mapper.messageMapper" >

	<select id="messageList" resultType="MessageVO" parameterType="int">
  		SELECT * FROM message
		WHERE member_index = #{member_index} and del_yn = 'N' order by send_date desc
  	</select>
  	
  	<select id="messageListDetail" resultType="MessageVO" parameterType="int">
  		SELECT * FROM message
		WHERE message_index = #{message_index}
  	</select>
 
</mapper>


